<div class="sidebar">
  <div class="content">
    <h1>Editar parada</h1>
    <%= render 'form' %>
  </div>
</div>
<div class="main_window">
  <div class="map">
    <div id="map-canvas"/>
  </div>
</div>

<%= content_for :foot do %>
  <%= render 'lines/maps' %>
  <%= javascript_include_tag 'bs_map', :cache => true %>
  <script>
  $(document).ready(function() {
    initialize(true, <%= @busstop.lat %>, <%= @busstop.lng %>, "<%= @busstop.name %>");
  })
  </script>
<% end %>